<?xml version="1.0" encoding="utf-8" ?>
<mvx:MvxContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mvx="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
             x:Class="SportConnect.Core.View.Login.LoginView">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Your login" VerticalOptions="Start" HorizontalOptions="Start" Margin="10,20,0,0"/>
                <Entry Text="{Binding Login}" HorizontalOptions="Center"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Your password"/>
                <Entry Text="{Binding Password}" IsPassword="True"/>
            </StackLayout>

            <Button Text="Log into app" Command="{Binding LogInCommand}" HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</mvx:MvxContentPage>